{
  "name": "eronn-pass-front",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "stylus": "^0.54.7"
  },
  "scripts": {
    "dev": "concurrently -k -n \"React,Stylus\" -p \"[{name}]\" -c \"blue,yellow\" \"npm run react:start\" \"npm run stylus:watch\"",
    "build": "npm run stylus:build && npm run react:build",
    "stylus:watch": "stylus ./styles/index.styl --include ./styles --out ./public/css --watch --compress",
    "stylus:build": "stylus ./styles/index.styl --include ./styles --out ./public/css --compress",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
