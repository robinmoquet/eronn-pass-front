.not-found-page
    min-height 100vh
    display flex
    flex-direction column
    justify-content space-between

    .not-found
        margin 0 auto
        margin-bottom calc(var(--space) * 10)
        display flex
        flex-direction column
        justify-content center
        // margin calc(var(--space) * 3)
        width 40%
        transition .3s ease
        +breakpoint($md, down)
            width 60%
        +breakpoint($sm, down)
            width 100%

        .not-found__icon
            text-align center
            margin-bottom calc(var(--space) * 2)
            i
                font-size 54px
                color var(--tonic)

        .not-found__content
            text-align center

        .not-found__action
            text-align center
            margin-top calc(var(--space) * 3)

        .not-found__helper
            margin-top calc(var(--space) * 4)
            text-align center
