.signup-page
    min-height 100vh
    display flex
    flex-direction column
    justify-content space-between

    .signup
        margin 0 auto
        margin-bottom calc(var(--space) * 5)
        display flex
        flex-direction column
        justify-content center
        // margin calc(var(--space) * 3)
        width 40%
        transition .3s ease
        +breakpoint(md, down)
            width 60%
        +breakpoint(sm, down)
            width 100%

        .signup__bottom-action
            text-align right
            margin-top calc(var(--space) * 3)

        .signup__already-user
            text-align center
            margin-bottom calc(var(--space) * 10)
            margin-top calc(var(--space) * 3)

            .button
                margin-left var(--space)
                margin-top var(--space)
